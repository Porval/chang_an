<view class="container">
    <view class="zan-form" style='magrin-top: 20rpx'>
      <view class="zan-cell zan-form__item">
        <text class="zan-form__title">姓名</text>
        <input
          class="zan-form__input zan-cell__bd"
          placeholder="请输入姓名"
        />
      </view>
      <view class="zan-cell zan-form__item">
        <text class="zan-form__title">性别</text>
        <view class="zan-form__input zan-cell__bd">
          <picker
            mode="selector"
            range="{{ gernal }}"
            value="{{ gernalIndex }}"
            bindchange="onGernalChanged"
          >
            {{ gernal[gernalIndex] }}
          </picker>
        </view>
      </view>
      <view class="zan-cell zan-form__item zan-cell--last-child">
        <text class="zan-form__title">身份证号</text>
        <input
          class="zan-form__input zan-cell__bd"
                    maxlength="20"
          placeholder="请输入证件号码"
        />
      </view>
  </view>

  <view class="upload-cell" bindtap='onClickAddInditityImage'>
      <image class="upload-image-sample" src="{{uploadImage1}}" mode="scaleToFill"></image>
      <view class="image-mask">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传身份证正面照片</text>
      </view>
  </view>
  
<view class="upload-cell" style='margin-top: 400rpx' bindtap='onClickAddInditityImage'>
      <image class="upload-image-sample" src="/drawable/bg_identity_2.jpeg" mode="scaleToFill"></image>
      <view class="image-mask">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传身份证反面照片</text>
      </view>
  </view>

  <button class="zan-btn zan-btn--large button-primary button-page-buttom"
      bindtap='toNext'
  >去驾驶认证</button>
</view>