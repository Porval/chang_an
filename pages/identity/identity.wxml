<view class="container">
  <view class="zan-form" style="margin-top: 30rpx">
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">姓名</text>
      <input
        class="zan-form__input zan-cell__bd"
        placeholder="请输入姓名"
        bindinput="inputName"
      />
    </view>
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">性别</text>
      <view class="zan-form__input zan-cell__bd">
        <picker
          mode="selector"
          range="{{ gerenal }}"
          value="{{ gerenalIndex }}"
          bindchange="onGerenalChange"
        >
          {{ gerenal[gerenalIndex] }}
        </picker>
      </view>
    </view>

    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">身份证号</text>
      <input
        class="zan-form__input zan-cell__bd"
        maxlength="20"
        placeholder="请输入证件号码"
        bindinput="inputIdentifyNumber"
      />
    </view>
  </view>

  <view class="upload-cell" bindtap='onClickAddInditityImageOne'>
      <image class="upload-image-sample" src="{{uploadImageOne}}" mode="scaleToFill"></image>
      <view class="image-mask" style="display: {{showSubmitButton ? 'flex': 'none'}}">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传身份证正面照片</text>
      </view>
  </view>
  
  <view class="upload-cell" style='margin-top: 400rpx' bindtap='onClickAddInditityImageTwo'>
      <image class="upload-image-sample" src="{{uploadImageTwo}}" mode="scaleToFill"></image>
      <view class="image-mask" style="display: {{showSubmitButton ? 'flex': 'none'}}">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传身份证反面照片</text>
      </view>
  </view>

  <view style="display: {{showSubmitButton ? 'flex': 'none'}}; flex-direction: column; align-items: center" class="button-page-buttom">
    <text style="color: #999999; font-size: 14px">您的个人信息仅用于验证</text>
    <button class="zan-btn zan-btn--large button-primary {{btnStyle}}" style='margin-top: 10px'
        bindtap='toNext'
    >{{btnText}}</button>
  </view>
</view>