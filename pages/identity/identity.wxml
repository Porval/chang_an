<view class="container">
  <view class="upload-cell" bindtap='onClickAddInditityImage'>
      <image class="upload-image-sample" src="{{uploadImage1}}" mode="scaleToFill"></image>
      <view class="image-mask">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传身份证正面照片</text>
      </view>
  </view>
  
<view class="upload-cell" style='margin-top: 400rpx' bindtap='onClickAddInditityImage'>
      <image class="upload-image-sample" src="/drawable/bg_identity_2.jpeg" mode="scaleToFill"></image>
      <view class="image-mask">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传身份证反面照片</text>
      </view>
  </view>

  <view style="display: {{showSubmitButton ? 'flex': 'none'}}; flex-direction: column; align-items: center" class="button-page-buttom">
    <text style="color: #999999; font-size: 14px">您的个人信息仅用于验证</text>
    <button class="zan-btn zan-btn--large button-primary {{btnStyle}}" style='margin-top: 10px'
        bindtap='toNext'
    >{{btnText}}</button>
  </view>
</view>