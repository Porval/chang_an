/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.index_container {
  height:100vh;
  background: #1e374c;
} 

.login_container {
  height: 100%;
  margin-top: 50px;
}

.login_cell {
  border-bottom: 1rpx solid #b1b1b1;
  height: 120rpx;
  position: relative;
  margin: 24rpx 30rpx;
  display: flex;
  font-size: 14px;
  align-items: center;
}
