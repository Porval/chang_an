<scroll-view>
    <view class="container">
    <swiper class="page-span"
        autoplay="true" interval="4000">
        <block wx:for="{{adList}}">
          <swiper-item>
            <image src="{{item}}" class="slide-image" style="width:100%; height: 100%"/>
          </swiper-item>
        </block>
    </swiper>     
    <view class='order-content'>
      <view>
        <checkbox checked="{{user.sex == 1 ? 'true' : ''}}" disabled='true' >先生</checkbox>
        <checkbox checked="{{user.sex != 1 ? 'true' : ''}}" disabled='true' style='margin-left: 50rpx'>女士</checkbox>
      </view>                  
       <input
          class="zan-form__input zan-cell__bd item-input"
                    maxlength="20"
          placeholder="{{user.name}}"
          disabled=true
        /> 
      <view>
      <input
          class="zan-form__input zan-cell__bd item-input"
                    maxlength="20"
          placeholder="{{user.mobile}}"
          type='number'
          bindinput="phoneInput"
      /> 
      </view>
      <view style='margin-top: 20rpx;'>
        <text>选择经销商</text>
        <view style='display: flex'> 
          <view class="zan-form__input zan-cell__bd item-picker-result">
            <picker
              mode="selector"
              range="{{ cityList }}"
              value="{{ cityIndex }}"
              bindchange="onCityChanged"
            >
              {{ cityList[cityIndex] }}
            </picker>
          </view>
          <view class="zan-form__input zan-cell__bd item-picker-result">
            <picker
              mode="selector"
              range="{{ areaList }}"
              value="{{ areaIndex }}"
              bindchange="onAreaChanged"
            >
              {{ areaList[areaIndex] }}
            </picker>
          </view>
        </view>
        <view class="zan-form__input zan-cell__bd item-picker-result ">
          <picker
            mode="selector"
            range="{{ shopList }}"
            value="{{ shopIndex }}"
            bindchange="onShopChanged"
          >
            {{ shopList[shopIndex] }}
          </picker>
        </view>

      </view>

      <view style='margin-top: 20rpx'>
          <text>试驾车型</text>
          <view class="zan-form__input zan-cell__bd item-picker-result">
            <picker
              mode="selector"
              range="{{ carList }}"
              value="{{ carIndex }}"
              bindchange="onCarChanged"
            >
              {{ carList[carIndex] }}
          </picker>
        </view>

      </view>

      <view class="zan-panel-title"  style='margin-top: 20rpx; padding-left: 0px'>
        <checkbox id="@+id/check_agreement"></checkbox>
        <text>我已阅读并同意</text>
        <text class="font-highlight" bindtap='onClickAgreement'>《长安出行试驾协议》</text>
      </view>
    </view>
    <view style='height: 70px'>
    </view>
  </view>
</scroll-view>  
<button class="zan-btn zan-btn--large button-primary button-page-buttom"
      bindtap='toOrder'
  >提交申请</button>