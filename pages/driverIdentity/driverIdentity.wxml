<view class="container">
    <view class="zan-form" style='magrin-top: 20rpx'>
      <view class="zan-cell zan-form__item">
        <text class="zan-form__title">证号</text>
        <input
          class="zan-form__input zan-cell__bd"
          placeholder="请输入驾驶证号"
        />
      </view>
      <view class="zan-cell zan-form__item">
        <text class="zan-form__title">准驾车型</text>
        <view class="zan-form__input zan-cell__bd">
          <picker
            mode="selector"
            range="{{ carTypes }}"
            value="{{ carTypeIndex }}"
            bindchange="onCarTypeChanged"
          >
            {{ carTypes[carTypeIndex] }}
          </picker>
        </view>
      </view>
      <view class="zan-cell zan-form__item">
        <text class="zan-form__title">生效日期</text>
        <input
          class="zan-form__input zan-cell__bd"
                    maxlength="20"
          placeholder="例: 20120902"
          type='number'
        />
      </view>

      <view class="zan-cell zan-form__item zan-cell--last-child">
        <text class="zan-form__title">截止日期</text>
        <input
          class="zan-form__input zan-cell__bd"
                    maxlength="20"
          placeholder="例: 20170902"
          type='number'
        />
      </view>
  </view>

  <view class="upload-cell" bindtap='onClickAddInditityImage'>
      <image class="upload-image-sample" src="/drawable/bg_drivder_identity_1.jpeg" mode="scaleToFill"></image>
      <view class="image-mask">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传驾驶证正面照片</text>
      </view>
  </view>
  
<view class="upload-cell" style='margin-top: 400rpx' bindtap='onClickAddInditityImage'>
      <image class="upload-image-sample" src="/drawable/bg_drivder_identity_2.jpeg" mode="scaleToFill"></image>
      <view class="image-mask">
        <image class="icon-large" src="/drawable/ic_plus.png"></image>
        <text>点击上传驾驶证反面照片</text>
      </view>
  </view>

  <button class="zan-btn zan-btn--large button-primary button-page-buttom"
      bindtap='toSubmit'
  >提交审核</button>
</view>